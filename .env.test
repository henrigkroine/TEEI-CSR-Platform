# Test Environment Configuration
# Ref: MULTI_AGENT_PLAN.md ยง QA Lead

NODE_ENV=test

# Database (use separate test database)
DATABASE_URL=postgresql://teei:teei_test@localhost:5432/teei_platform_test

# NATS Event Bus
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=teei-test-cluster

# JWT Configuration (test keys)
JWT_SECRET=test_jwt_secret_for_integration_tests_only_not_for_production
JWT_EXPIRES_IN=24h
JWT_ISSUER=teei-platform-test

# Webhook Secrets (test values)
KINTELL_WEBHOOK_SECRET=test_webhook_secret_32_chars_long
UPSKILLING_WEBHOOK_SECRET=test_upskilling_secret_32_chars

# Service Ports (use different ports for tests if needed)
PORT_API_GATEWAY=3000
PORT_UNIFIED_PROFILE=3001
PORT_KINTELL_CONNECTOR=3002
PORT_BUDDY_SERVICE=3003
PORT_UPSKILLING_CONNECTOR=3004
PORT_Q2Q_AI=3005
PORT_SAFETY_MODERATION=3006

# Disable external APIs in tests
DISABLE_EXTERNAL_APIS=true

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Observability (disabled for tests)
SENTRY_DSN=
OTEL_ENABLED=false

# Q2Q AI Service (mock mode)
Q2Q_MODEL_PROVIDER=mock
Q2Q_CONFIDENCE_THRESHOLD=0.7

# Safety Service (mock mode)
SAFETY_ENABLED=true
SAFETY_AUTO_FLAG_THRESHOLD=0.8

# WAF (disabled for tests)
WAF_ENABLED=false

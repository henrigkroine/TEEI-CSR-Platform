{
  "dashboard": {
    "title": "Database Performance",
    "tags": ["teei", "database", "postgres"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 3},
        "type": "row",
        "title": "Query Performance"
      },
      {
        "id": 2,
        "gridPos": {"x": 0, "y": 3, "w": 12, "h": 8},
        "type": "graph",
        "title": "Query Rate by Operation",
        "targets": [
          {
            "expr": "sum(rate(db_queries_total[5m])) by (operation)",
            "legendFormat": "{{operation}}"
          }
        ],
        "yaxes": [
          {"format": "qps", "label": "Queries/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"x": 12, "y": 3, "w": 12, "h": 8},
        "type": "graph",
        "title": "Query Duration (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (operation, le))",
            "legendFormat": "{{operation}}"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "gridPos": {"x": 0, "y": 11, "w": 12, "h": 8},
        "type": "graph",
        "title": "Query Success vs Errors",
        "targets": [
          {
            "expr": "sum(rate(db_queries_total{status=\"success\"}[5m]))",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(rate(db_queries_total{status=\"error\"}[5m]))",
            "legendFormat": "Error"
          }
        ],
        "yaxes": [
          {"format": "qps"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "gridPos": {"x": 12, "y": 11, "w": 12, "h": 8},
        "type": "graph",
        "title": "Queries by Table",
        "targets": [
          {
            "expr": "sum(rate(db_queries_total[5m])) by (table)",
            "legendFormat": "{{table}}"
          }
        ],
        "yaxes": [
          {"format": "qps"},
          {"format": "short"}
        ]
      }
    ]
  }
}

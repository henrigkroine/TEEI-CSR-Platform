{
  "name": "teei-csr-platform",
  "version": "0.1.0",
  "private": true,
  "description": "TEEI CSR Platform - Unified impact measurement and AI-powered ecosystem",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:unit": "pnpm -r test",
    "test:coverage": "pnpm -r test -- --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.astro",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,astro,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,astro,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "csr",
    "impact-measurement",
    "social-impact",
    "sroi",
    "volunteer-management"
  ],
  "author": "TEEI Platform (Henrik RÃ¸ine)",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@chromatic-com/storybook": "^1.0.0",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-a11y": "^7.6.7",
    "@storybook/addon-coverage": "^1.0.0",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chromatic": "^10.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-storybook": "^0.6.15",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "storybook": "^7.6.7",
    "typescript": "^5.3.3"
  }
}

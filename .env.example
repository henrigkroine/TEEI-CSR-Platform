# Database
DATABASE_URL=postgresql://user:password@localhost:5432/teei_csr_platform
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d
SESSION_COOKIE_NAME=teei_session
SESSION_SECRET=your-session-secret-here

# OpenAI / AI Services
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_CLIENT_ID=your-discord-client-id-here
DISCORD_GUILD_ID=your-discord-server-id-here

# External Integrations
KINTELL_API_URL=https://api.kintell.com
KINTELL_API_KEY=your-kintell-api-key-here

BENEVITY_API_URL=https://api.benevity.com
BENEVITY_API_KEY=your-benevity-api-key-here

GOODERA_API_URL=https://api.goodera.com
GOODERA_API_KEY=your-goodera-api-key-here

WORKDAY_API_URL=https://api.workday.com
WORKDAY_API_KEY=your-workday-api-key-here

# Services URLs
REPORTING_SERVICE_URL=http://localhost:3001
DISCORD_BOT_URL=http://localhost:3002

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:4321

# Feature Flags
ENABLE_IMPACT_IN_API=true
ENABLE_DISCORD_WEBHOOKS=true
ENABLE_CSRD_EXPORT=true

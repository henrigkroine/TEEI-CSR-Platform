# Privacy Orchestrator Configuration

# Server
PORT=3010
HOST=0.0.0.0
LOG_LEVEL=info

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# Database connections (per region)
DATABASE_URL=postgresql://user:password@localhost:5432/teei_production
DB_EU_CONNECTION_STRING=postgresql://user:password@eu-db.teei.com:5432/teei_eu
DB_US_CONNECTION_STRING=postgresql://user:password@us-db.teei.com:5432/teei_us
DB_UK_CONNECTION_STRING=postgresql://user:password@uk-db.teei.com:5432/teei_uk

# Storage endpoints (per region)
STORAGE_EU_ENDPOINT=https://storage-eu.teei.com
STORAGE_US_ENDPOINT=https://storage-us.teei.com
STORAGE_UK_ENDPOINT=https://storage-uk.teei.com

# Encryption keys (per region)
ENCRYPTION_KEY_EU=eu-key-v1
ENCRYPTION_KEY_US=us-key-v1
ENCRYPTION_KEY_UK=uk-key-v1
PII_MASTER_KEY=<base64-encoded-32-byte-key>
PII_KEY_VERSION=v1

# CORS
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# SLA Configuration (hours)
SLA_EXPORT_HOURS=24
SLA_DELETE_HOURS=72
SLA_STATUS_SECONDS=5
SLA_CONSENT_SECONDS=2

# Observability
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

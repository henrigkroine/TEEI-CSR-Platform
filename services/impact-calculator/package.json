{
  "name": "@teei/impact-calculator",
  "version": "1.0.0",
  "description": "VIS (Volunteer Impact Score) Calculator service for CSR Platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/api.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start:api": "node dist/api.js",
    "start:batch": "node dist/batch-job.js",
    "start:listener": "node dist/event-listener.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vis",
    "impact",
    "volunteer",
    "scoring",
    "metrics"
  ],
  "author": "TEEI CSR Platform Team",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.25.2",
    "pg": "^8.11.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3",
    "@vitest/coverage-v8": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

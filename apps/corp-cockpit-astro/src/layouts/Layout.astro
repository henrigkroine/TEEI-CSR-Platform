---
import Navigation from '../components/Navigation.astro';
import { detectLanguage } from '../lib/i18n';
import type { Language } from '../lib/i18n';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'TEEI Corporate Cockpit - Executive Analytics Dashboard' } = Astro.props;
const lang: Language = detectLanguage(Astro.request);
const user = Astro.locals.user;
const currentPath = new URL(Astro.request.url).pathname;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: 'Inter', system-ui, sans-serif;
        background-color: #f9fafb;
      }

      body {
        min-height: 100vh;
      }

      @media (prefers-color-scheme: dark) {
        html {
          background-color: #111827;
        }
      }
    </style>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900">
    <Navigation currentPath={currentPath} lang={lang} user={user} />
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
    <footer class="bg-white dark:bg-gray-800 shadow-lg mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <p class="text-center text-sm text-gray-500 dark:text-gray-400">
          &copy; {new Date().getFullYear()} TEEI CSR Platform. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

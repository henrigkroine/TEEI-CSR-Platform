---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  lang?: string;
  companyId?: string;
  companyName?: string;
}

const { title, lang = 'en', companyId = 'default', companyName = 'Current Tenant' } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
const basePath = `/${lang}/cockpit/${companyId}`;
const navItems = [
  {
    href: `${basePath}`,
    label: 'Dashboard',
    description: 'Executive overview',
    icon: 'M3 12l2-2 4 4 10-10 2 2-12 12z',
  },
  {
    href: `${basePath}/pipeline`,
    label: 'Campaign Pipeline',
    description: 'Progress & briefs',
    icon: 'M4 7h16M4 12h16M4 17h16',
  },
  {
    href: `${basePath}/insights`,
    label: 'AI Insights',
    description: 'Narratives & clusters',
    icon: 'M4 12h4l2 8 4-16 2 8h4',
  },
  {
    href: `${basePath}/compliance`,
    label: 'Compliance',
    description: 'Policy + alerts',
    icon: 'M12 2l7 4v6c0 5-3 9-7 10-4-1-7-5-7-10V6z',
  },
  {
    href: `${basePath}/programmes/language-for-ukraine`,
    label: 'Language for Ukraine',
    description: 'Programme Dashboard',
    icon: 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z',
  },
  {
    href: `${basePath}/reports`,
    label: 'Reports',
    description: 'Exports & approvals',
    icon: 'M8 4h11v16H5V4z M9 2v4',
  },
  {
    href: `${basePath}/settings`,
    label: 'Settings',
    description: 'Tenant + access',
    icon: 'M12 8a4 4 0 100 8 4 4 0 000-8zm8 4l1.5-1.5-2-3.5-2.1.4a6.5 6.5 0 00-1.7-1l-.3-2.2h-4l-.3 2.2a6.5 6.5 0 00-1.7 1l-2.1-.4-2 3.5L4 12l1.5 1.5-.4 2.1 3.5 2.1 1-.3 2.2.3v4l2.2.3 1-.3 3.5-2.1-.4-2.1L20 12z',
  },
];
const breadcrumbTrail = [
  { label: 'Corporate Cockpit', href: `/${lang}/cockpit` },
  { label: companyName, href: basePath },
  { label: title, href: currentPath },
];
---

<BaseLayout title={title} lang={lang}>
  <div class="cockpit-shell">
    <aside id="cockpit-sidebar" class="cockpit-sidebar" aria-label="Primary navigation" data-open="false">
      <div class="sidebar-inner">
        <div class="sidebar-brand">
          <div>
            <p class="label">TEEI CSR</p>
            <p class="company">{companyName}</p>
          </div>
          <button class="close-drawer" data-mobile-close type="button" aria-label="Close navigation">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="sidebar-section">
          <p class="section-label">Navigation</p>
          <ul class="sidebar-nav" role="list">
            {navItems.map((item) => {
              const isActive = currentPath === item.href || (item.href !== `${basePath}` && currentPath.startsWith(item.href));
              return (
                <li>
                  <a
                    href={item.href}
                    class={`nav-link ${isActive ? 'is-active' : ''}`}
                    aria-current={isActive ? 'page' : undefined}
                  >
                    <span class="nav-indicator" aria-hidden="true"></span>
                    <svg class="nav-icon" viewBox="0 0 24 24">
                      <path d={item.icon} />
                    </svg>
                    <span class="nav-text">
                      <strong>{item.label}</strong>
                      <small>{item.description}</small>
                    </span>
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
        <div class="sidebar-footer">
          <p class="label uppercase tracking-[0.3em] text-xs text-white/70">Need insights?</p>
          <p class="text-sm text-white/90 mb-4">Kick off the AI Writer with your latest campaign context.</p>
          <button class="btn-primary w-full">Trigger AI Writer</button>
        </div>
      </div>
    </aside>

    <div class="cockpit-shell-content">
      <header class="cockpit-topbar" id="cockpit-topbar">
        <div class="topbar-left">
          <button class="mobile-menu-btn" type="button" data-mobile-toggle aria-label="Open navigation">
            <span></span>
            <span></span>
            <span></span>
          </button>
          <div class="breadcrumbs" aria-label="Breadcrumb">
            {breadcrumbTrail.map((crumb, index) => (
              <span class="breadcrumb-item" data-last={index === breadcrumbTrail.length - 1}>
                {index < breadcrumbTrail.length - 1 ? (
                  <a href={crumb.href}>{crumb.label}</a>
                ) : (
                  <span>{crumb.label}</span>
                )}
              </span>
            ))}
          </div>
        </div>
        <div class="topbar-actions">
          <div class="command-search" role="search">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M11 18a7 7 0 100-14 7 7 0 000 14zm7 3l-4.3-4.3" />
            </svg>
            <input type="search" placeholder="Search or jump to..." aria-label="Global search" />
            <kbd>âŒ˜K</kbd>
          </div>
          <button class="topbar-icon" type="button" aria-label="Notifications">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M18 15v-4a6 6 0 10-12 0v4l-2 2h16z" />
              <path d="M13.73 21a2 2 0 01-3.46 0" />
            </svg>
            <span class="badge" aria-label="3 unread notifications"></span>
          </button>
          <button class="topbar-icon" type="button" data-theme-toggle aria-label="Toggle theme">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 3a9 9 0 108.94 7.5A7 7 0 0112 3z" />
            </svg>
          </button>
          <div class="profile-chip" role="button" aria-label="Open profile menu" tabindex="0">
            <div class="avatar">MH</div>
            <div>
              <p>Marisa Holt</p>
              <small>Impact Ops</small>
            </div>
            <span class="status"></span>
          </div>
        </div>
      </header>

      <div class="mobile-cta">
        <button class="btn-primary w-full">New Brief</button>
      </div>

      <main id="main-content" class="cockpit-main">
        <slot />
      </main>
    </div>
    <div id="cockpit-sidebar-overlay" class="cockpit-sidebar-overlay" aria-hidden="true"></div>
  </div>

  <script>
    const sidebar = document.getElementById('cockpit-sidebar');
    const overlay = document.getElementById('cockpit-sidebar-overlay');
    const openButtons = document.querySelectorAll('[data-mobile-toggle]');
    const closeButton = document.querySelector('[data-mobile-close]');
    const themeToggle = document.querySelector('[data-theme-toggle]');

    const setSidebarState = (open) => {
      if (!sidebar) return;
      sidebar.setAttribute('data-open', open ? 'true' : 'false');
      overlay?.setAttribute('data-open', open ? 'true' : 'false');
      document.body.classList.toggle('overflow-hidden', open);
    };

    openButtons.forEach((btn) => btn.addEventListener('click', () => setSidebarState(true)));
    closeButton?.addEventListener('click', () => setSidebarState(false));
    overlay?.addEventListener('click', () => setSidebarState(false));

    themeToggle?.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme') || 'light';
      const next = current === 'light' ? 'dark' : 'light';
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('teei-cockpit-theme', next);
    });
  </script>

  <style is:global>
    .cockpit-shell {
      display: grid;
      grid-template-columns: var(--sidebar-width-desktop) 1fr;
      min-height: 100vh;
      background: var(--color-background);
    }

    @media (max-width: 1280px) {
      .cockpit-shell {
        grid-template-columns: var(--sidebar-width-tablet) 1fr;
      }
    }

    @media (max-width: 640px) {
      .cockpit-shell {
        display: block;
      }
    }

    .cockpit-sidebar {
      background: linear-gradient(180deg, #00393f 0%, #034c53 100%);
      color: #fff;
      position: sticky;
      top: 0;
      min-height: 100vh;
      z-index: 20;
      transition: transform 0.3s var(--motion-ease);
    }

    .sidebar-inner {
      padding: var(--space-32) var(--space-24);
      display: flex;
      flex-direction: column;
      gap: var(--space-32);
      height: 100%;
    }

    .sidebar-brand {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .sidebar-brand .label {
      font-size: 0.8rem;
      letter-spacing: 0.3em;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.6);
    }

    .sidebar-brand .company {
      font-size: 1.1rem;
      font-weight: 600;
    }

    .close-drawer {
      display: none;
      color: #fff;
      font-size: 1.75rem;
    }

    .sidebar-section .section-label {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.3em;
      color: rgba(255, 255, 255, 0.4);
      margin-bottom: var(--space-12);
    }

    .sidebar-nav {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
    }

    .nav-link {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: var(--space-16);
      padding: var(--space-16);
      border-radius: 16px;
      color: rgba(255, 255, 255, 0.75);
      position: relative;
      transition: background 0.2s ease, transform 0.2s ease;
    }

    .nav-link:hover,
    .nav-link:focus-visible {
      background: rgba(255, 255, 255, 0.08);
      color: #fff;
    }

    .nav-link.is-active {
      background: rgba(186, 143, 90, 0.16);
      color: #fff;
    }

    .nav-indicator {
      width: 4px;
      border-radius: 999px;
      background: transparent;
      position: absolute;
      left: 8px;
      top: 12px;
      bottom: 12px;
      transition: background 0.2s ease;
    }

    .nav-link.is-active .nav-indicator {
      background: var(--color-accent);
      box-shadow: 0 0 12px rgba(186, 143, 90, 0.6);
    }

    .nav-icon {
      width: 1.5rem;
      height: 1.5rem;
      stroke: currentColor;
      fill: none;
    }

    .nav-text strong {
      display: block;
      font-size: 0.95rem;
      margin-bottom: 0.1rem;
    }

    .nav-text small {
      font-size: 0.75rem;
      color: rgba(255, 255, 255, 0.6);
    }

    .sidebar-footer .btn-primary {
      justify-content: center;
    }

    .cockpit-shell-content {
      background: var(--color-background);
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .cockpit-topbar {
      position: sticky;
      top: 0;
      z-index: 15;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      gap: var(--space-16);
      padding: var(--space-16) var(--space-32);
      background: rgba(248, 250, 252, 0.85);
      backdrop-filter: blur(var(--topbar-blur));
      border-bottom: 1px solid rgba(12, 36, 48, 0.08);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
    }

    .topbar-left {
      display: flex;
      align-items: center;
      gap: var(--space-16);
      flex: 1;
    }

    .mobile-menu-btn {
      width: 44px;
      height: 44px;
      border-radius: 12px;
      border: 1px solid rgba(12, 36, 48, 0.12);
      background: #fff;
      display: none;
      flex-direction: column;
      justify-content: center;
      gap: 6px;
      padding: 8px;
    }

    .mobile-menu-btn span {
      display: block;
      height: 2px;
      background: #0c2430;
      border-radius: 999px;
    }

    .breadcrumbs {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-12);
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.25em;
      color: var(--color-text-tertiary);
    }

    .breadcrumb-item a {
      color: inherit;
      text-decoration: none;
    }

    .breadcrumb-item::after {
      content: '/';
      margin-left: 0.75rem;
      color: rgba(12, 36, 48, 0.2);
    }

    .breadcrumb-item[data-last='true']::after {
      content: '';
      margin: 0;
    }

    .topbar-actions {
      display: flex;
      align-items: center;
      gap: var(--space-12);
    }

    .command-search {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      background: var(--color-surface);
      border-radius: 999px;
      padding: 0.4rem 0.9rem;
      border: 1px solid var(--color-border);
      min-width: 240px;
    }

    .command-search input {
      border: none;
      background: transparent;
      font-size: 0.9rem;
      flex: 1;
      color: var(--color-text-primary);
    }

    .command-search input:focus {
      outline: none;
    }

    .command-search svg {
      width: 18px;
      height: 18px;
      stroke: var(--color-text-tertiary);
      fill: none;
    }

    .command-search kbd {
      font-size: 0.75rem;
      padding: 0.15rem 0.4rem;
      border-radius: 6px;
      border: 1px solid var(--color-border);
      color: var(--color-text-secondary);
      background: var(--color-muted);
    }

    .topbar-icon {
      position: relative;
      width: 44px;
      height: 44px;
      border-radius: 14px;
      border: 1px solid var(--color-border);
      background: #fff;
      display: grid;
      place-items: center;
      transition: transform var(--motion-duration-cta) var(--motion-ease);
    }

    .topbar-icon:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-button-hover);
    }

    .topbar-icon svg {
      width: 20px;
      height: 20px;
      stroke: var(--color-text-secondary);
      fill: none;
    }

    .topbar-icon .badge {
      position: absolute;
      top: 8px;
      right: 10px;
      width: 8px;
      height: 8px;
      border-radius: 999px;
      background: var(--color-accent);
      box-shadow: 0 0 0 3px rgba(186, 143, 90, 0.2);
    }

    .profile-chip {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.35rem 0.9rem;
      border-radius: 999px;
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      cursor: pointer;
      position: relative;
    }

    .profile-chip .avatar {
      width: 36px;
      height: 36px;
      border-radius: 999px;
      background: var(--color-primary);
      color: #fff;
      display: grid;
      place-items: center;
      font-weight: 600;
    }

    .profile-chip small {
      color: var(--color-text-tertiary);
      letter-spacing: 0.08em;
      text-transform: uppercase;
      font-size: 0.65rem;
    }

    .profile-chip .status {
      width: 10px;
      height: 10px;
      border-radius: 999px;
      background: #18a957;
      border: 2px solid #fff;
      position: absolute;
      right: 10px;
      bottom: 8px;
    }

    .cockpit-main {
      flex: 1;
      padding: var(--space-32);
    }

    .mobile-cta {
      display: none;
      padding: var(--space-16) var(--space-24);
      border-bottom: 1px solid var(--color-border);
      background: var(--color-background);
    }

    .cockpit-sidebar-overlay {
      display: none;
    }

    @media (max-width: 1024px) {
      .topbar-actions .command-search {
        display: none;
      }
    }

    @media (max-width: 640px) {
      .cockpit-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        transform: translateX(-100%);
        width: min(84vw, 320px);
      }

      .cockpit-sidebar[data-open='true'] {
        transform: translateX(0);
      }

      .close-drawer {
        display: block;
        background: transparent;
        border: none;
      }

      .cockpit-sidebar-overlay {
        display: block;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
        z-index: 15;
      }

      .cockpit-sidebar-overlay[data-open='true'] {
        opacity: 1;
        pointer-events: auto;
      }

      .mobile-menu-btn {
        display: flex;
      }

      .topbar-actions .topbar-icon:nth-child(2),
      .topbar-actions .profile-chip {
        display: none;
      }

      .mobile-cta {
        display: block;
      }

      .cockpit-main {
        padding: var(--space-24);
      }
    }
  </style>
</BaseLayout>

---
/**
 * Analytics Operations Dashboard (Live Ops)
 *
 * Real-time analytics system health monitoring for:
 * - Admins
 * - Super Admins
 * - Managers (Project Managers)
 *
 * Features:
 * - Overall system status
 * - Endpoint health (trends, engagement, data quality)
 * - Cache health metrics
 * - DQ remediation activity
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { hasPermission } from '../utils/rbac';
import AnalyticsOpsContent from '../components/analytics/ops/AnalyticsOpsContent.tsx';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Allow ADMIN, SUPER_ADMIN, and MANAGER (Project Manager)
const canAccessOps = hasPermission(user.role, 'ADMIN_CONSOLE') || user.role === 'MANAGER';

if (!canAccessOps) {
  return Astro.redirect('/403');
}
---

<BaseLayout title="Analytics Operations - TEEI Corporate Cockpit">
  <div class="ops-dashboard-container">
    <!-- Header -->
    <div class="ops-header">
      <div>
        <h1>Analytics Operations Dashboard</h1>
        <p class="subtitle">Real-time system health monitoring</p>
      </div>
      <div class="header-actions">
        <span class="role-badge">{user.role}</span>
        <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>

    <!-- Main Content -->
    <AnalyticsOpsContent client:load />
  </div>
</BaseLayout>

<style>
  .ops-dashboard-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: calc(var(--spacing-unit) * 3);
  }

  .ops-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: calc(var(--spacing-unit) * 4);
    flex-wrap: wrap;
    gap: calc(var(--spacing-unit) * 2);
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-gray-900, #111827);
    margin: 0;
  }

  .subtitle {
    font-size: 0.875rem;
    color: var(--color-gray-600, #6b7280);
    margin-top: calc(var(--spacing-unit) * 0.5);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: calc(var(--spacing-unit) * 2);
  }

  .role-badge {
    display: inline-block;
    padding: calc(var(--spacing-unit) * 0.5) calc(var(--spacing-unit) * 1.5);
    background-color: var(--color-blue-100, #dbeafe);
    color: var(--color-blue-700, #1d4ed8);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn {
    padding: calc(var(--spacing-unit) * 1) calc(var(--spacing-unit) * 2);
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
  }

  .btn-secondary {
    background-color: var(--color-gray-200, #e5e7eb);
    color: var(--color-gray-800, #1f2937);
  }

  .btn-secondary:hover {
    background-color: var(--color-gray-300, #d1d5db);
  }

  @media (max-width: 768px) {
    .ops-header {
      flex-direction: column;
      align-items: flex-start;
    }

    h1 {
      font-size: 1.5rem;
    }

    .header-actions {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>

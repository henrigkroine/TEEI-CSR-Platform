---
import { PublicationEditor } from '../../../components/publications/PublicationEditor';

const { id } = Astro.params;
const title = id === 'new' ? 'New Publication' : 'Edit Publication';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - TEEI Cockpit</title>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50">
      <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex items-center justify-between">
          <div>
            <a
              href="/admin/publications"
              class="text-sm text-gray-500 hover:text-gray-700 mb-2 inline-block"
            >
              ‚Üê Back to Publications
            </a>
            <h1 class="text-3xl font-bold text-gray-900">{title}</h1>
          </div>
        </div>
      </header>

      <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <PublicationEditor publicationId={id === 'new' ? undefined : id} client:load />
      </main>
    </div>
  </body>
</html>

---
// /en/platform/index.astro - Platform Overview Page
import BaseLayout from '@/layouts/BaseLayout.astro';
import '@/styles/premium-cards.css';
---

<BaseLayout title="Platform Overview - TEEI CSR Platform" lang="en">
  <!-- FIXED NAVIGATION -->
  <nav class="nav">
    <div class="nav-container">
      <a href="/en" class="nav-logo">TEEI</a>
      <div class="nav-links">
        <a href="/en#programs">Programs</a>
        <a href="/en/platform">Platform</a>
        <a href="/en#about">About</a>
      </div>
      <a href="/en/contact" class="nav-cta">Get a Demo</a>
    </div>
  </nav>

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-content animate-on-scroll">
      <p class="hero-eyebrow">THE PLATFORM</p>
      <h1>
        The Platform That <span class="accent">Proves Impact</span>
      </h1>
      <p class="hero-subtitle">
        TEEI runs the programs. Our platform proves they work. Real metrics. Real evidence. Real ROI.
      </p>
      <div class="hero-ctas">
        <a href="/en/contact" class="btn btn-primary btn-premium">Schedule Demo</a>
        <a href="#features" class="btn btn-secondary btn-premium">Explore Features →</a>
      </div>
    </div>
  </section>

  <!-- PLATFORM COMPONENTS SECTION -->
  <section id="features" class="section section-light">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">CORE FEATURES</span>
        <h2>Platform Components</h2>
        <p class="section-subtitle">
          Four integrated tools that turn volunteer activity into board-ready insights
        </p>
      </div>

      <div class="features-grid">
        <a href="/en/platform/dashboard" class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="7" height="7"/>
              <rect x="14" y="3" width="7" height="7"/>
              <rect x="14" y="14" width="7" height="7"/>
              <rect x="3" y="14" width="7" height="7"/>
            </svg>
          </div>
          <h3>Corporate Cockpit</h3>
          <p>Real-time dashboard showing program performance, volunteer activity, and outcome metrics. Everything your CSR team needs in one view.</p>
          <span class="feature-link">Explore Dashboard →</span>
        </a>

        <a href="/en/platform/sroi" class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </div>
          <h3>SROI Calculator</h3>
          <p>Calculate social return on investment with transparent methodology. Turn volunteer hours into defendable dollar value.</p>
          <span class="feature-link">Learn About SROI →</span>
        </a>

        <a href="/en/platform/reports" class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <line x1="10" y1="9" x2="8" y2="9"/>
            </svg>
          </div>
          <h3>Impact Reports</h3>
          <p>Auto-generated quarterly reports with full evidence lineage. Every claim backed by session notes, feedback, and data.</p>
          <span class="feature-link">View Sample Reports →</span>
        </a>

        <a href="/en/platform/integrations" class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v6m0 6v6"/>
              <circle cx="12" cy="12" r="10"/>
              <path d="M16.24 7.76l-4.24 4.24m0 0l-4.24 4.24m4.24-4.24l4.24 4.24m-4.24-4.24l-4.24-4.24"/>
            </svg>
          </div>
          <h3>Integrations</h3>
          <p>Connect with Slack, Teams, your HRIS, and volunteer platforms. Data flows automatically—no manual entry.</p>
          <span class="feature-link">Browse Integrations →</span>
        </a>
      </div>
    </div>
  </section>

  <!-- KEY STATS SECTION -->
  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-card animate-on-scroll">
          <div class="stat-value">20,000+</div>
          <div class="stat-label">Refugees Reached</div>
          <p class="stat-description">Across mentoring, language practice, and buddy programs</p>
        </div>

        <div class="stat-card animate-on-scroll">
          <div class="stat-value">8,000+</div>
          <div class="stat-label">Sessions Tracked</div>
          <p class="stat-description">Every conversation logged with outcomes and feedback</p>
        </div>

        <div class="stat-card animate-on-scroll">
          <div class="stat-value">3.5:1</div>
          <div class="stat-label">Average SROI</div>
          <p class="stat-description">Measurable social value created per dollar invested</p>
        </div>

        <div class="stat-card animate-on-scroll">
          <div class="stat-value">100%</div>
          <div class="stat-label">Evidence Coverage</div>
          <p class="stat-description">Click any metric and trace it back to source data</p>
        </div>
      </div>
    </div>
  </section>

  <!-- WHY TEEI SECTION -->
  <section class="benefits-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">WHY TEEI</span>
        <h2>Built for Enterprise CSR Teams</h2>
        <p class="section-subtitle">
          Not just another volunteer tracking tool—a complete impact measurement platform
        </p>
      </div>

      <div class="benefits-grid">
        <div class="benefit-card animate-on-scroll">
          <div class="benefit-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/>
              <polyline points="16 7 22 7 22 13"/>
            </svg>
          </div>
          <h3>Measurable Outcomes</h3>
          <p>Track real behavior change—language improvement, employment readiness, integration progress—not just activity.</p>
        </div>

        <div class="benefit-card animate-on-scroll">
          <div class="benefit-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
            </svg>
          </div>
          <h3>Evidence-Backed Reports</h3>
          <p>Every number links to the underlying evidence. Session notes, feedback forms, assessment scores—full audit trail.</p>
        </div>

        <div class="benefit-card animate-on-scroll">
          <div class="benefit-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <line x1="3" y1="9" x2="21" y2="9"/>
              <line x1="9" y1="21" x2="9" y2="9"/>
            </svg>
          </div>
          <h3>Real-Time Dashboards</h3>
          <p>Live data streaming from Kintell video sessions. See program health and volunteer engagement as it happens.</p>
        </div>

        <div class="benefit-card animate-on-scroll">
          <div class="benefit-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
          </div>
          <h3>GDPR Compliant</h3>
          <p>Built with European privacy standards. Data residency controls, consent management, and full DSAR support.</p>
        </div>

        <div class="benefit-card animate-on-scroll">
          <div class="benefit-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <polyline points="9 12 11 14 15 10"/>
            </svg>
          </div>
          <h3>Enterprise Ready</h3>
          <p>SSO, SCIM provisioning, role-based access, SOC 2 certified infrastructure. Built for Fortune 500 compliance.</p>
        </div>

        <div class="benefit-card animate-on-scroll">
          <div class="benefit-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
              <line x1="9" y1="10" x2="15" y2="10"/>
            </svg>
          </div>
          <h3>AI-Powered Analysis</h3>
          <p>Natural language feedback transformed into quantified outcomes. Sentiment analysis, theme extraction, impact scoring.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="cta-section">
    <div class="cta-background"></div>
    <div class="container">
      <div class="cta-content">
        <span class="cta-label">GET STARTED</span>
        <h2>See Your Impact Platform</h2>
        <p>Join companies that stopped guessing and started knowing. Request a personalized demo and see your first SROI report in 30 days.</p>
        <div class="cta-buttons">
          <a href="/en/contact" class="btn btn-primary">Schedule a Demo</a>
          <a href="/en/docs" class="btn btn-secondary">Browse Documentation</a>
        </div>
        <p class="cta-note">Free pilot program available for qualified organizations</p>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Column -->
        <div class="footer-brand">
          <a href="/en" class="footer-logo">
            <span class="logo-text">TEEI</span>
          </a>
          <p class="footer-tagline">Equality Through Education</p>
          <p class="footer-description">The Educational Equality Institute connects corporations with refugees through measurable volunteer programs.</p>
          <div class="footer-social">
            <a href="https://linkedin.com/company/teei" aria-label="LinkedIn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a href="https://twitter.com/teikiorg" aria-label="Twitter">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Programs Column -->
        <div class="footer-column">
          <h4>Programs</h4>
          <ul>
            <li><a href="/en/programs/buddy">Buddy Program</a></li>
            <li><a href="/en/programs/language">Language Connect</a></li>
            <li><a href="/en/programs/mentorship">Mentors for Ukraine</a></li>
            <li><a href="/en/programs/upskilling">Upskilling Academy</a></li>
            <li><a href="/en/programs/weei">Women's Entrepreneurship</a></li>
          </ul>
        </div>

        <!-- Platform Column -->
        <div class="footer-column">
          <h4>Platform</h4>
          <ul>
            <li><a href="/en/platform/dashboard">Corporate Cockpit</a></li>
            <li><a href="/en/platform/sroi">SROI Calculator</a></li>
            <li><a href="/en/platform/reports">Impact Reports</a></li>
            <li><a href="/en/platform/integrations">Integrations</a></li>
            <li><a href="/en/docs">Documentation</a></li>
          </ul>
        </div>

        <!-- Company Column -->
        <div class="footer-column">
          <h4>Company</h4>
          <ul>
            <li><a href="/en/about">About TEEI</a></li>
            <li><a href="/en/impact">Our Impact</a></li>
            <li><a href="/en/partners">Partners</a></li>
            <li><a href="/en/careers">Careers</a></li>
            <li><a href="/en/contact">Contact</a></li>
          </ul>
        </div>
      </div>

      <div class="footer-bottom">
        <div class="footer-legal">
          <p>&copy; 2025 The Educational Equality Institute. All rights reserved.</p>
          <nav class="footer-legal-links">
            <a href="/en/privacy">Privacy Policy</a>
            <a href="/en/terms">Terms of Service</a>
            <a href="/en/cookies">Cookie Policy</a>
          </nav>
        </div>
        <div class="footer-certifications">
          <span class="certification">501(c)(3) Nonprofit</span>
          <span class="certification">GDPR Compliant</span>
        </div>
      </div>
    </div>
  </footer>
</BaseLayout>

<style>
  /* GLOBAL: FORCE NO ITALICS ON ANY HEADING */
  h1, h2, h3, h4, h5, h6,
  .section-title,
  [class*="heading"],
  [class*="headline"],
  .hero h1,
  .hero h1 span,
  .cta h2,
  .cta-section h2 {
    font-style: normal !important;
    -webkit-font-smoothing: antialiased;
  }

  /* Variables */
  :root {
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 2rem;
    --space-xl: 3rem;
    --space-3xl: 5rem;
    --font-heading: 'Lora', Georgia, serif;
    --font-body: 'Roboto Flex', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --color-primary: #00393f;
    --color-accent: #BA8F5A;
    --radius-lg: 12px;
    --radius-xl: 20px;
    --radius-md: 8px;
    --radius-full: 9999px;
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 20px 60px rgba(0, 57, 63, 0.15);
    --text-primary: #00393f;
    --text-body: #475569;
    --text-light: #64748b;
    --border-light: #e2e8f0;
    --bg-light: #f8fafc;
    --bg-white: #ffffff;
    --section-spacing: 5rem;
  }

  html { scroll-behavior: smooth; }

  /* FIXED NAVIGATION WITH BACKDROP BLUR */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--space-sm) var(--space-xl);
    background: transparent;
    transition: all 0.3s ease;
  }

  .nav.scrolled {
    background: rgba(0, 57, 63, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow-md);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-accent);
  }

  .nav-cta {
    background: var(--color-accent);
    color: var(--color-primary) !important;
    padding: 10px 24px;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(186, 143, 90, 0.4);
  }

  /* HERO SECTION */
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--section-spacing) + 60px) var(--space-xl) var(--section-spacing);
    background: linear-gradient(165deg, #00393f 0%, #004a52 40%, #003840 100%);
    color: white;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 30% 20%, rgba(10, 89, 97, 0.4) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 30%, rgba(186, 143, 90, 0.12) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .accent {
    color: var(--color-accent);
  }

  .hero-eyebrow {
    font-size: 13px;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #BA8F5A;
    margin-bottom: 24px;
    font-weight: 700;
    display: inline-block;
  }

  .hero h1 {
    font-size: clamp(48px, 8vw, 88px);
    font-weight: 900;
    line-height: 1.05;
    margin-bottom: 32px;
    letter-spacing: -0.03em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    color: white !important;
  }

  .hero-subtitle {
    font-size: clamp(18px, 2vw, 22px);
    line-height: 1.6;
    color: rgba(255,255,255,0.9);
    margin-bottom: 48px;
    font-weight: 400;
  }

  .hero-ctas {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* PREMIUM BUTTONS WITH SHIMMER */
  .btn {
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    position: relative;
    overflow: hidden;
    border: none;
    cursor: pointer;
  }

  .btn-premium::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, transparent, rgba(255,255,255,0.3), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .btn-premium:hover::before {
    transform: translateX(100%);
  }

  .btn-primary {
    background: linear-gradient(135deg, #BA8F5A 0%, #d4a66a 100%);
    color: #00393f;
    box-shadow:
      0 4px 16px rgba(186, 143, 90, 0.4),
      0 0 0 1px rgba(186, 143, 90, 0.2);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow:
      0 12px 32px rgba(186, 143, 90, 0.5),
      0 0 0 1px rgba(186, 143, 90, 0.3),
      0 0 60px rgba(186, 143, 90, 0.2);
  }

  .btn-secondary {
    background: rgba(255,255,255,0.05);
    color: white;
    border: 2px solid rgba(255,255,255,0.2);
    backdrop-filter: blur(8px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .btn-secondary:hover {
    border-color: #BA8F5A;
    background: rgba(186, 143, 90, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(186, 143, 90, 0.2);
  }

  /* SECTIONS */
  .section {
    padding: var(--section-spacing) var(--space-xl);
    position: relative;
  }

  .section-light {
    background: #f8fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-accent);
    margin-bottom: 1rem;
  }

  .section h2 {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 600;
    font-style: normal;
    color: var(--color-primary);
    margin: 0 0 1rem 0;
  }

  .section-subtitle {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--text-body);
    max-width: 600px;
    margin: 0 auto;
  }

  /* FEATURES GRID */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .feature-card {
    background: white;
    border: 1px solid var(--border-light);
    border-radius: 20px;
    padding: 2.5rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    box-shadow:
      0 0 0 1px rgba(0, 57, 63, 0.05),
      0 4px 8px rgba(0, 57, 63, 0.04),
      0 16px 32px rgba(0, 57, 63, 0.08);
  }

  .feature-card:hover {
    border-color: var(--color-accent);
    box-shadow:
      0 0 0 1px rgba(186, 143, 90, 0.15),
      0 8px 16px rgba(0, 57, 63, 0.08),
      0 24px 48px rgba(0, 57, 63, 0.12),
      0 0 60px rgba(186, 143, 90, 0.1);
    transform: translateY(-8px);
  }

  .feature-icon {
    width: 64px;
    height: 64px;

---
// /en/platform/integrations.astro - Integrations Marketing Page
import BaseLayout from '@layouts/BaseLayout.astro';
import '@/styles/premium-cards.css';
---

<BaseLayout title="Integrations - TEEI CSR Platform" lang="en">
  <!-- FIXED NAVIGATION -->
  <nav class="nav">
    <div class="nav-container">
      <a href="/en" class="nav-logo">TEEI</a>
      <div class="nav-links">
        <a href="/en#programs">Programs</a>
        <a href="/en#platform">Platform</a>
        <a href="/en#about">About</a>
      </div>
      <a href="/en/contact" class="nav-cta">Get a Demo</a>
    </div>
  </nav>

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-content animate-on-scroll">
      <p class="hero-eyebrow">INTEGRATIONS</p>
      <h1>
        Connects With Your <span class="accent">CSR Stack</span>
      </h1>
      <p class="hero-subtitle">
        Export impact data to Benevity, Goodera, Workday, and more. Seamless data flow.
      </p>
      <div class="hero-ctas">
        <a href="/en/docs/api" class="btn btn-primary btn-premium">View API Docs</a>
        <a href="/en/contact" class="btn btn-secondary btn-premium">Contact Sales →</a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </div>
  </section>

  <!-- INTEGRATION CARDS SECTION -->
  <section class="integrations-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">PARTNER ECOSYSTEM</span>
        <h2>Built for Your CSR Tools</h2>
        <p class="section-subtitle">
          Whether you're using enterprise platforms or building custom workflows, TEEI connects seamlessly.
        </p>
      </div>

      <div class="integrations-grid">
        <!-- Benevity -->
        <div class="integration-card animate-on-scroll">
          <div class="integration-header">
            <div class="integration-logo">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                <line x1="12" y1="22.08" x2="12" y2="12"></line>
              </svg>
            </div>
            <span class="status-badge status-production">Production Ready</span>
          </div>
          <h3>Benevity</h3>
          <p class="integration-description">
            Bi-directional sync, volunteer matching, and automatic hours tracking. Full integration with Benevity's volunteer management platform.
          </p>
          <ul class="feature-list">
            <li>Automatic session logging</li>
            <li>Two-way data sync</li>
            <li>Impact metrics export</li>
          </ul>
        </div>

        <!-- Goodera -->
        <div class="integration-card animate-on-scroll">
          <div class="integration-header">
            <div class="integration-logo">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
              </svg>
            </div>
            <span class="status-badge status-coming">Coming Q2 2025</span>
          </div>
          <h3>Goodera</h3>
          <p class="integration-description">
            Campaign data, reporting, and CSR program analytics. Seamless integration with Goodera's impact platform.
          </p>
          <ul class="feature-list">
            <li>Campaign performance data</li>
            <li>Custom report generation</li>
            <li>Beneficiary metrics</li>
          </ul>
        </div>

        <!-- Workday -->
        <div class="integration-card animate-on-scroll">
          <div class="integration-header">
            <div class="integration-logo">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <span class="status-badge status-coming">Coming Q3 2025</span>
          </div>
          <h3>Workday</h3>
          <p class="integration-description">
            HR integration, employee data synchronization, and volunteer profile management through Workday's HCM platform.
          </p>
          <ul class="feature-list">
            <li>Employee directory sync</li>
            <li>Skills matching</li>
            <li>Time tracking integration</li>
          </ul>
        </div>

        <!-- Kintell -->
        <div class="integration-card animate-on-scroll">
          <div class="integration-header">
            <div class="integration-logo">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="7" width="20" height="15" rx="2" ry="2"></rect>
                <polyline points="17 2 12 7 7 2"></polyline>
              </svg>
            </div>
            <span class="status-badge status-internal">Internal</span>
          </div>
          <h3>Kintell</h3>
          <p class="integration-description">
            Video session platform integration with automatic logging of mentoring calls, language practice, and buddy sessions.
          </p>
          <ul class="feature-list">
            <li>Auto-session logging</li>
            <li>Video call metadata</li>
            <li>Participant tracking</li>
          </ul>
        </div>

        <!-- Upskilling Academy -->
        <div class="integration-card animate-on-scroll">
          <div class="integration-header">
            <div class="integration-logo">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
              </svg>
            </div>
            <span class="status-badge status-internal">Internal</span>
          </div>
          <h3>Upskilling Academy</h3>
          <p class="integration-description">
            Course data, certifications, and learning outcomes. Track professional development impact across refugee programs.
          </p>
          <ul class="feature-list">
            <li>Course completion tracking</li>
            <li>Certification awards</li>
            <li>Learning analytics</li>
          </ul>
        </div>

        <!-- Buddy System -->
        <div class="integration-card animate-on-scroll">
          <div class="integration-header">
            <div class="integration-logo">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <span class="status-badge status-internal">Internal</span>
          </div>
          <h3>Buddy System</h3>
          <p class="integration-description">
            Matching algorithms, session tracking, and relationship analytics for the Buddy integration program.
          </p>
          <ul class="feature-list">
            <li>Smart matching</li>
            <li>Session scheduling</li>
            <li>Relationship tracking</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- TECHNICAL SPECIFICATIONS SECTION -->
  <section class="specs-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">TECHNICAL FOUNDATION</span>
        <h2>Enterprise-Grade Integration</h2>
        <p class="section-subtitle">
          Built for security, scalability, and reliability. Our API follows industry best practices.
        </p>
      </div>

      <div class="specs-grid">
        <div class="spec-card animate-on-scroll">
          <div class="spec-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
          </div>
          <h3>RESTful API</h3>
          <p>OpenAPI 3.0 specification with JSON responses. Comprehensive documentation and interactive testing.</p>
        </div>

        <div class="spec-card animate-on-scroll">
          <div class="spec-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </div>
          <h3>OAuth 2.0</h3>
          <p>Secure authentication with token refresh support. Industry-standard authorization flows.</p>
        </div>

        <div class="spec-card animate-on-scroll">
          <div class="spec-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h3>Rate Limiting</h3>
          <p>1,000 requests per hour with burst support. Fair usage policies and quota management.</p>
        </div>

        <div class="spec-card animate-on-scroll">
          <div class="spec-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
          <h3>Webhooks</h3>
          <p>Real-time event notifications for session completions, campaign updates, and impact metrics.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- API PREVIEW SECTION -->
  <section class="api-preview-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">QUICK START</span>
        <h2>Simple, Powerful API</h2>
        <p class="section-subtitle">
          Get started in minutes. Fetch impact data with a single request.
        </p>
      </div>

      <div class="api-preview-container animate-on-scroll">
        <div class="code-header">
          <div class="code-dots">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <span class="code-title">GET /api/v1/campaigns/:id/impact</span>
        </div>

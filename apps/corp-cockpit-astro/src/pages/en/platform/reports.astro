<style>
  /* Import premium cards */
  html { scroll-behavior: smooth; }

  /* GLOBAL: FORCE NO ITALICS ON ANY HEADING */
  h1, h2, h3, h4, h5, h6,
  .section-title,
  [class*="heading"],
  [class*="headline"],
  .hero h1,
  .hero h1 span,
  .cta h2,
  .cta-section h2 {
    font-style: normal !important;
    -webkit-font-smoothing: antialiased;
  }

  /* Variables - Match landing page */
  :root {
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 2rem;
    --space-xl: 3rem;
    --space-3xl: 5rem;
    --font-heading: 'Lora', Georgia, serif;
    --font-body: 'Roboto Flex', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --color-primary: #00393f;
    --color-accent: #BA8F5A;
    --radius-lg: 12px;
    --radius-xl: 20px;
    --radius-md: 8px;
    --radius-full: 9999px;
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 20px 60px rgba(0, 57, 63, 0.15);
    --text-primary: #00393f;
    --text-body: #475569;
    --text-light: #64748b;
    --border-light: #e2e8f0;
    --bg-light: #f8fafc;
    --bg-white: #ffffff;
    --section-spacing: 5rem;
    --h2-size: 56px;
    --h3-size: 24px;
    --body-large: 20px;
  }

  /* FIXED NAVIGATION */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--space-sm) var(--space-xl);
    background: transparent;
    transition: all 0.3s ease;
  }

  .nav.scrolled {
    background: rgba(0, 57, 63, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow-md);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.95rem;

---
// /en/platform/reports.astro - Impact Reports Marketing Page

import BaseLayout from '@layouts/BaseLayout.astro';
import '@/styles/premium-cards.css';
---

<BaseLayout title="AI-Powered Impact Reports - TEEI CSR Platform" lang="en">
  <!-- FIXED NAVIGATION -->
  <nav class="nav">
    <div class="nav-container">
      <a href="/en" class="nav-logo">TEEI</a>
      <div class="nav-links">
        <a href="/en#programs">Programs</a>
        <a href="/en#platform">Platform</a>
        <a href="/en#about">About</a>
      </div>
      <a href="/en/contact" class="nav-cta">Get a Demo</a>
    </div>
  </nav>

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-content animate-on-scroll">
      <p class="hero-eyebrow">IMPACT REPORTS</p>
      <h1>
        AI-Powered <span class="accent">Impact Reports</span>
      </h1>
      <p class="hero-subtitle">
        From raw data to board-ready presentations in minutes. Every claim cited. Every number traceable.
      </p>
      <div class="hero-ctas">
        <a href="/en/cockpit/demo/reports" class="btn btn-primary btn-premium">Generate Report</a>
        <a href="#templates" class="btn btn-secondary btn-premium">View Templates →</a>
      </div>
    </div>

    <!-- Hero Stats -->
    <div class="hero-stats animate-on-scroll">
      <div class="stat">
        <span class="stat-value counter" data-target="2" data-suffix=" min">0</span>
        <span class="stat-label">Average Generation Time</span>
      </div>
      <div class="stat">
        <span class="stat-value">100%</span>
        <span class="stat-label">Citation Coverage</span>
      </div>
      <div class="stat">
        <span class="stat-value counter" data-target="42" data-suffix="+">0</span>
        <span class="stat-label">Languages Supported</span>
      </div>
      <div class="stat">
        <span class="stat-value">GDPR</span>
        <span class="stat-label">Compliant PII Redaction</span>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </div>
  </section>

  <!-- REPORT TEMPLATES SECTION -->
  <section id="templates" class="section section-light">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">REPORT TEMPLATES</span>
        <h2>Choose Your Format</h2>
        <p class="section-subtitle">Pre-built templates for every stakeholder. Customize as needed.</p>
      </div>

      <div class="templates-grid">
        <div class="template-card animate-on-scroll">
          <div class="template-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <line x1="10" y1="9" x2="8" y2="9"/>
            </svg>
          </div>
          <h3>Quarterly Impact Report</h3>
          <p>Standard quarterly update for stakeholders. Includes KPIs, program highlights, and outcome trends.</p>
          <div class="template-meta">
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 6v6l4 2"/>
              </svg>
              8-12 pages
            </span>
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              PDF + PPTX
            </span>
          </div>
        </div>

        <div class="template-card animate-on-scroll">
          <div class="template-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
              <path d="M3 9h18"/>
              <path d="M9 21V9"/>
            </svg>
          </div>
          <h3>Annual CSR Report</h3>
          <p>Comprehensive year-end review. Full program analysis, SROI calculations, and beneficiary stories.</p>
          <div class="template-meta">
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 6v6l4 2"/>
              </svg>
              24-40 pages
            </span>
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              PDF + PPTX
            </span>
          </div>
        </div>

        <div class="template-card animate-on-scroll">
          <div class="template-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
            </svg>
          </div>
          <h3>Investor Update</h3>
          <p>ESG-focused financial reporting. Metrics tied to UN SDGs, compliance status, and risk analysis.</p>
          <div class="template-meta">
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 6v6l4 2"/>
              </svg>
              6-10 pages
            </span>
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              PDF + PPTX
            </span>
          </div>
        </div>

        <div class="template-card animate-on-scroll">
          <div class="template-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
              <line x1="12" y1="22.08" x2="12" y2="12"/>
            </svg>
          </div>
          <h3>Impact Deep Dive</h3>
          <p>Detailed program-level analysis. Volunteer scores, session data, outcome tracking, and evidence trails.</p>
          <div class="template-meta">
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 6v6l4 2"/>
              </svg>
              16-28 pages
            </span>
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              PDF + PPTX
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- HOW IT WORKS SECTION -->
  <section class="how-it-works">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">THE PROCESS</span>
        <h2>How It Works</h2>
        <p class="section-subtitle">From data to presentation in four simple steps</p>
      </div>

      <div class="steps-grid">
        <div class="step animate-on-scroll">
          <div class="step-number">1</div>
          <h3>Select Template</h3>
          <p>Choose from pre-built or custom templates based on your audience</p>
        </div>

        <div class="step animate-on-scroll">
          <div class="step-number">2</div>
          <h3>Set Parameters</h3>
          <p>Date range, programs, metrics, and branding preferences</p>
        </div>

        <div class="step animate-on-scroll">
          <div class="step-number">3</div>
          <h3>AI Generation</h3>
          <p>NLG engine creates narrative with full citations and evidence links</p>
        </div>

        <div class="step animate-on-scroll">
          <div class="step-number">4</div>
          <h3>Review & Export</h3>
          <p>Edit in-platform, approve, and export as PDF or PowerPoint</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURES GRID SECTION -->
  <section class="features-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">FEATURES</span>
        <h2>Enterprise-Grade Reporting</h2>
        <p class="section-subtitle">Built for compliance, designed for impact</p>
      </div>

      <div class="features-grid">
        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
            </svg>
          </div>
          <h3>Citation Enforcement</h3>
          <p>Every claim linked to source evidence. Click any number to trace back to session notes, feedback, or outcome data.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
          </div>
          <h3>PII Redaction</h3>
          <p>Automatic anonymization of beneficiary data. GDPR-compliant by default, with full audit trails.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
            </svg>
          </div>
          <h3>Multi-Locale Support</h3>
          <p>Reports in EN, UK (Ukrainian), and NO (Norwegian). Same data, localized narratives and formatting.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
          </div>
          <h3>PDF Export</h3>
          <p>Print-ready documents with embedded charts, tables, and watermarks. Perfect for distribution and archival.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
              <line x1="8" y1="21" x2="16" y2="21"/>
              <line x1="12" y1="17" x2="12" y2="21"/>
            </svg>
          </div>
          <h3>PPTX Export</h3>
          <p>Editable PowerPoint presentations. Board-ready slides with your branding and custom themes.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="1" x2="12" y2="23"/>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </div>
          <h3>Cost Tracking</h3>
          <p>Token usage and generation costs displayed per report. Full transparency for AI budget planning.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SAMPLE REPORT PREVIEW SECTION -->
  <section class="preview-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">PREVIEW</span>
        <h2>See It In Action</h2>
        <p class="section-subtitle">Sample quarterly impact report with live citations</p>
      </div>

      <div class="preview-mockup animate-on-scroll">
        <div class="mockup-content">
          <div class="mockup-header">

<style>
  /* Import base design tokens from landing page */
  html { scroll-behavior: smooth; }

  /* GLOBAL: FORCE NO ITALICS ON ANY HEADING */
  h1, h2, h3, h4, h5, h6 {
    font-style: normal !important;
    -webkit-font-smoothing: antialiased;
  }

  /* Variables - matching landing page */
  :root {
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 2rem;
    --space-xl: 3rem;
    --space-3xl: 5rem;
    --font-heading: 'Lora', Georgia, serif;
    --font-body: 'Roboto Flex', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --color-primary: #00393f;
    --color-accent: #BA8F5A;
    --radius-lg: 12px;
    --radius-xl: 20px;
    --radius-md: 8px;
    --radius-full: 9999px;
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 20px 60px rgba(0, 57, 63, 0.15);
    --text-primary: #00393f;
    --text-body: #475569;
    --text-light: #64748b;
    --border-light: #e2e8f0;
    --bg-light: #f8fafc;
    --bg-white: #ffffff;
    --section-spacing: 5rem;
  }

  /* NAVIGATION */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--space-sm) var(--space-xl);
    background: transparent;
    transition: all 0.3s ease;
  }

  .nav.scrolled {
    background: rgba(0, 57, 63, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow-md);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-accent);
  }

  .nav-cta {
    background: var(--color-accent);
    color: var(--color-primary) !important;
    padding: 10px 24px;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(186, 143, 90, 0.4);
  }

  /* HERO SECTION - Split layout */
  .hero {
    position: relative;
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: var(--space-3xl);
    padding: var(--section-spacing) var(--space-xl);
    background: linear-gradient(165deg, #00393f 0%, #004a52 40%, #003840 100%);
    color: white;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 30% 20%, rgba(10, 89, 97, 0.4) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 30%, rgba(186, 143, 90, 0.12) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content { position: relative; z-index: 1; }

  .hero-eyebrow {
    font-size: 13px;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #BA8F5A;
    margin-bottom: 24px;
    font-weight: 700;
    display: inline-block;
    position: relative;
  }

  .hero-eyebrow::before {
    content: '';
    position: absolute;
    left: -40px;
    top: 50%;
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #BA8F5A);
  }

  .hero h1 {
    font-size: 88px;
    font-weight: 900;
    line-height: 1.05;
    margin-bottom: 32px;
    letter-spacing: -0.03em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    color: white !important;
  }

  .accent {
    color: var(--color-accent);
  }

  .hero-subtitle {
    font-size: 22px;
    line-height: 1.6;
    color: rgba(255,255,255,0.9);
    margin-bottom: 48px;
    max-width: 600px;
    font-weight: 400;
  }

  .hero-ctas {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  /* PREMIUM BUTTONS */
  .btn {
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    position: relative;
    overflow: hidden;
    border: none;
    cursor: pointer;
  }

  .btn-premium::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, transparent, rgba(255,255,255,0.3), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .btn-premium:hover::before {
    transform: translateX(100%);
  }

  .btn-primary {
    background: linear-gradient(135deg, #BA8F5A 0%, #d4a66a 100%);
    color: #00393f;
    box-shadow: 0 4px 16px rgba(186, 143, 90, 0.4);
  }


---
// /en/platform/dashboard.astro - Corporate Cockpit Dashboard Marketing Page
import BaseLayout from '@layouts/BaseLayout.astro';
import '@/styles/premium-cards.css';
---

<BaseLayout title="Corporate Cockpit - Real-Time CSR Dashboard | TEEI" lang="en">
  <!-- FIXED NAVIGATION -->
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="nav-logo">TEEI</a>
      <div class="nav-links">
        <a href="/en#programs">Programs</a>
        <a href="/en#platform">Platform</a>
        <a href="/en#about">About</a>
      </div>
      <a href="/en/contact" class="nav-cta">Get a Demo</a>
    </div>
  </nav>

  <!-- HERO SECTION - Split layout with dashboard preview -->
  <section class="hero">
    <div class="hero-content animate-on-scroll">
      <p class="hero-eyebrow">CORPORATE COCKPIT</p>
      <h1>
        Your CSR <span class="accent">Command Center</span>
      </h1>
      <p class="hero-subtitle">
        Real-time impact metrics, volunteer tracking, and executive reporting in one dashboard. See your social impact as it happens.
      </p>
      <div class="hero-ctas">
        <a href="/en/contact" class="btn btn-primary btn-premium">Request Demo</a>
        <a href="#features" class="btn btn-secondary btn-premium">See Features →</a>
      </div>
    </div>

    <!-- Dashboard Preview Mockup -->
    <div class="dashboard-preview animate-on-scroll">
      <div class="browser-frame">
        <div class="browser-chrome">
          <div class="browser-dots">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <div class="browser-url">app.teei.org/cockpit/dashboard</div>
        </div>
        <div class="browser-content">
          <div class="mock-sidebar">
            <div class="mock-nav-item active"></div>
            <div class="mock-nav-item"></div>
            <div class="mock-nav-item"></div>
            <div class="mock-nav-item"></div>
          </div>
          <div class="mock-main">
            <div class="mock-kpi-grid">
              <div class="mock-kpi-card">
                <div class="mock-label"></div>
                <div class="mock-value">3.5:1</div>
                <div class="mock-trend"></div>
              </div>
              <div class="mock-kpi-card">
                <div class="mock-label"></div>
                <div class="mock-value">2,847</div>
                <div class="mock-trend"></div>
              </div>
              <div class="mock-kpi-card">
                <div class="mock-label"></div>
                <div class="mock-value">78</div>
                <div class="mock-trend"></div>
              </div>
              <div class="mock-kpi-card">
                <div class="mock-label"></div>
                <div class="mock-value">156</div>
                <div class="mock-trend"></div>
              </div>
            </div>
            <div class="mock-chart"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- KEY FEATURES SECTION -->
  <section id="features" class="features-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">KEY FEATURES</span>
        <h2>Everything You Need to Track Impact</h2>
      </div>

      <div class="features-grid">
        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
            </svg>
          </div>
          <h3>Real-Time Metrics</h3>
          <p>Server-Sent Events push updates to your dashboard instantly. No refresh needed. Watch volunteer hours, SROI, and VIS scores update live.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7"/>
              <rect x="14" y="3" width="7" height="7"/>
              <rect x="14" y="14" width="7" height="7"/>
              <rect x="3" y="14" width="7" height="7"/>
            </svg>
          </div>
          <h3>KPI Dashboard</h3>
          <p>Track SROI, VIS scores, volunteer hours, and beneficiary reach. All metrics automatically calculated and updated from live session data.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
          </div>
          <h3>Evidence Explorer</h3>
          <p>Click any number to trace it back to source. See session notes, feedback forms, and timestamps. Full audit trail for every metric.</p>
        </div>

        <div class="feature-card animate-on-scroll">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
              <line x1="8" y1="21" x2="16" y2="21"/>
              <line x1="12" y1="17" x2="12" y2="21"/>
            </svg>
          </div>
          <h3>Boardroom Mode</h3>
          <p>Full-screen executive view with auto-cycling charts. Perfect for presentations, town halls, and leadership meetings.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- DASHBOARD PREVIEW DETAIL SECTION -->
  <section class="preview-detail-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">SEE IT IN ACTION</span>
        <h2>Your Impact at a Glance</h2>
      </div>

      <div class="detail-browser animate-on-scroll">
        <div class="browser-frame-large">
          <div class="browser-chrome">
            <div class="browser-dots">
              <span></span>
              <span></span>
              <span></span>
            </div>
            <div class="browser-url">app.teei.org/cockpit/dashboard</div>
          </div>
          <div class="browser-content-large">
            <!-- Sidebar -->
            <div class="detail-sidebar">
              <div class="sidebar-logo">TEEI</div>
              <nav class="sidebar-nav">
                <a href="#" class="nav-item active">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"/>
                    <rect x="14" y="3" width="7" height="7"/>
                    <rect x="14" y="14" width="7" height="7"/>
                    <rect x="3" y="14" width="7" height="7"/>
                  </svg>
                  Dashboard
                </a>
                <a href="#" class="nav-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                  </svg>
                  Volunteers
                </a>
                <a href="#" class="nav-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
                  </svg>
                  Analytics
                </a>
                <a href="#" class="nav-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                  </svg>
                  Reports
                </a>
              </nav>
            </div>

            <!-- Main Content -->
            <div class="detail-main">
              <!-- KPI Cards -->
              <div class="detail-kpi-grid">
                <div class="detail-kpi-card">
                  <div class="kpi-label">Social ROI</div>
                  <div class="kpi-value">3.5:1</div>
                  <div class="kpi-trend positive">↑ 12% vs last quarter</div>
                </div>
                <div class="detail-kpi-card">
                  <div class="kpi-label">Volunteer Hours</div>
                  <div class="kpi-value">2,847</div>
                  <div class="kpi-trend positive">↑ 234 this month</div>
                </div>
                <div class="detail-kpi-card">
                  <div class="kpi-label">Avg VIS Score</div>
                  <div class="kpi-value">78</div>
                  <div class="kpi-trend neutral">→ Stable</div>
                </div>
                <div class="detail-kpi-card">
                  <div class="kpi-label">Active Volunteers</div>
                  <div class="kpi-value">156</div>
                  <div class="kpi-trend positive">↑ 8 new this week</div>
                </div>
              </div>

              <!-- Chart Placeholder -->
              <div class="detail-chart">
                <div class="chart-header">
                  <h4>Impact Over Time</h4>
                  <div class="chart-legend">
                    <span class="legend-item">
                      <span class="legend-dot" style="background: #BA8F5A;"></span>
                      SROI
                    </span>
                    <span class="legend-item">
                      <span class="legend-dot" style="background: #00393f;"></span>
                      VIS Score
                    </span>
                  </div>
                </div>
                <div class="chart-content">
                  <!-- Stylized chart visualization -->
                  <svg viewBox="0 0 400 150" class="chart-svg">
                    <polyline
                      points="0,120 50,110 100,95 150,85 200,75 250,70 300,65 350,60 400,55"
                      fill="none"
                      stroke="#BA8F5A"
                      stroke-width="2"
                      opacity="0.8"
                    />
                    <polyline
                      points="0,100 50,95 100,90 150,88 200,85 250,83 300,80 350,78 400,75"
                      fill="none"
                      stroke="#00393f"
                      stroke-width="2"
                      opacity="0.6"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CAPABILITIES SECTION -->
  <section class="capabilities-section">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <span class="section-label">CAPABILITIES</span>
        <h2>Enterprise-Grade Features</h2>
      </div>

      <div class="capabilities-grid">
        <div class="capability-category animate-on-scroll">
          <h3>Analytics</h3>
          <ul>
            <li>Real-time SROI calculations</li>
            <li>VIS scores for every volunteer</li>
            <li>Quarter-over-quarter trends</li>
            <li>Cohort analysis and segmentation</li>
          </ul>
        </div>

        <div class="capability-category animate-on-scroll">
          <h3>Reporting</h3>
          <ul>
            <li>AI-generated narratives</li>
            <li>PDF and PPTX export</li>
            <li>Scheduled email reports</li>
            <li>Full evidence citations</li>
          </ul>
        </div>

        <div class="capability-category animate-on-scroll">
          <h3>Enterprise</h3>
          <ul>
            <li>SSO with SAML 2.0</li>
            <li>Role-based access control</li>
            <li>Multi-tenant isolation</li>
            <li>Complete audit logs</li>
          </ul>
        </div>

        <div class="capability-category animate-on-scroll">
          <h3>Experience</h3>
          <ul>
            <li>Dark mode support</li>
            <li>Multi-language (8 languages)</li>
            <li>PWA for offline access</li>
            <li>Mobile-responsive design</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- TESTIMONIAL SECTION -->
  <section class="testimonial-section">
    <div class="container">
      <div class="testimonial-card">
        <div class="testimonial-content">
          <svg class="quote-icon" width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          <blockquote>
            The Corporate Cockpit changed how our leadership sees CSR. We went from quarterly spreadsheets to live dashboards. Now the board asks for the dashboard link before every meeting.
          </blockquote>
          <div class="testimonial-attribution">
            <div class="attribution-avatar">
              <span>MK</span>
            </div>
            <div class="attribution-text">
              <span class="attribution-name">Marcus Klein</span>
              <span class="attribution-role">Director of Social Impact, Fortune 500</span>
            </div>
          </div>
        </div>
        <div class="testimonial-stats">
          <div class="stat">
            <span class="stat-value">4.2:1</span>
            <span class="stat-label">Current SROI</span>
          </div>
          <div class="stat">
            <span class="stat-value">3,200</span>
            <span class="stat-label">Volunteer Hours</span>
          </div>
          <div class="stat">
            <span class="stat-value">91</span>
            <span class="stat-label">Average VIS</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="cta-section">
    <div class="cta-background"></div>
    <div class="container">
      <div class="cta-content">
        <span class="cta-label">GET STARTED</span>
        <h2>See Your Impact Dashboard</h2>
        <p>Stop guessing. Start measuring. Get real-time visibility into your CSR program in under 30 days.</p>
        <div class="cta-buttons">
          <a href="/en/contact" class="btn btn-primary">Request Demo</a>
          <a href="/en" class="btn btn-secondary">Learn More</a>
        </div>
        <p class="cta-note">Custom onboarding and training included</p>
      </div>
    </div>
  </section>


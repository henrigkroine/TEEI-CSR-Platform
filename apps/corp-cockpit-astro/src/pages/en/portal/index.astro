---
// /en/portal/index.astro - Customer Portal (Tenant Selector)

import BaseLayout from '@layouts/BaseLayout.astro';
import TenantSelector from '@components/tenant/TenantSelector';

// Get cookies directly to avoid middleware dependency issues
const tenantId = Astro.cookies.get('tenantId')?.value;
const sessionCookie = Astro.cookies.get('session')?.value;

// Parse session to check user role (simpler than relying on middleware)
let userRole = null;
let userCompanyId = null;
if (sessionCookie) {
  try {
    let session;
    try {
      session = JSON.parse(sessionCookie);
    } catch {
      session = JSON.parse(decodeURIComponent(sessionCookie));
    }
    userRole = session.role ?? session.r;
    userCompanyId = session.companyId ?? session.cid;
  } catch {
    // Invalid session - clear both cookies
    Astro.cookies.delete('session', { path: '/' });
    Astro.cookies.delete('tenantId', { path: '/' });
  }
}

// Debug logging (remove in production)
console.log('[Portal] tenantId:', tenantId);
console.log('[Portal] userRole:', userRole);
console.log('[Portal] userCompanyId:', userCompanyId);

// Check if user can access the tenantId in cookie
const canAccess = userRole === 'SUPER_ADMIN' || userCompanyId === tenantId;
const hasValidSession = sessionCookie && userRole;
const hasTenantAccess = tenantId && hasValidSession && canAccess;

// If tenantId exists but user can't access it, clear the stale cookie
if (tenantId && (!hasValidSession || !canAccess)) {
  console.log('[Portal] Clearing stale tenantId cookie');
  Astro.cookies.delete('tenantId', { path: '/' });
}

// NOTE: We don't auto-redirect anymore to avoid browser redirect cache loops
// Instead, we show a "Continue to Dashboard" link
console.log('[Portal] Rendering tenant selector, hasTenantAccess:', hasTenantAccess);
---

<BaseLayout title="Customer Portal - TEEI CSR Platform" lang="en">
  <div class="portal-page">
    <div class="portal-container">
      <div class="portal-header">
        <a href="/en" class="back-link">← Back to TEEI.io</a>
        <h1>Customer Portal</h1>
        <p>Select your company to access the Corporate Cockpit</p>
      </div>

      {hasTenantAccess && tenantId && (
        <div class="continue-section">
          <p>You're signed in and ready to go!</p>
          <a href={`/en/cockpit/${tenantId}`} class="continue-btn">
            Continue to Dashboard →
          </a>
          <p class="or-text">Or select a different tenant below:</p>
        </div>
      )}

      {!hasValidSession && (
        <div class="login-prompt">
          <p>Please sign in to access your dashboard</p>
          <a href="/login?redirect=/en/portal" class="login-btn">Sign In</a>
        </div>
      )}

      <div class="tenant-selector-wrapper">
        <TenantSelector
          lang="en"
          compact={true}
          heading={hasValidSession ? "Select a tenant" : "Available tenants"}
          subheading={hasValidSession ? "Pick a tenant to continue" : "Sign in to access these workspaces"}
          client:load
        />
      </div>

      <div class="portal-footer">
        <p>Don't have an account? <a href="/en/contact">Contact us</a> to get started.</p>
      </div>
    </div>
  </div>
</BaseLayout>


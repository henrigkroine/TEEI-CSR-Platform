<style>
  /* Import design tokens from landing page */
  :root {
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 2rem;
    --space-xl: 3rem;
    --space-3xl: 5rem;
    --font-heading: 'Lora', Georgia, serif;
    --font-body: 'Roboto Flex', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --color-primary: #00393f;
    --color-accent: #BA8F5A;
    --radius-lg: 12px;
    --radius-xl: 20px;
    --radius-md: 8px;
    --radius-full: 9999px;
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 20px 60px rgba(0, 57, 63, 0.15);
    --text-primary: #00393f;
    --text-body: #475569;
    --text-light: #64748b;
    --border-light: #e2e8f0;
    --bg-light: #f8fafc;
    --bg-white: #ffffff;
    --section-spacing: 5rem;
  }

  html { scroll-behavior: smooth; }

  /* GLOBAL: FORCE NO ITALICS ON ANY HEADING */
  h1, h2, h3, h4, h5, h6 {
    font-style: normal !important;
    -webkit-font-smoothing: antialiased;
  }

  /* FIXED NAVIGATION */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--space-sm) var(--space-xl);
    background: transparent;
    transition: all 0.3s ease;
  }

  .nav.scrolled {
    background: rgba(0, 57, 63, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: var(--shadow-md);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-accent);
  }

  .nav-cta {
    background: var(--color-accent);
    color: var(--color-primary) !important;
    padding: 10px 24px;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(186, 143, 90, 0.4);
  }

  /* HERO SECTION */
  .hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--section-spacing) var(--space-xl);
    background: linear-gradient(165deg, #00393f 0%, #004a52 40%, #003840 100%);
    color: white;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 30% 20%, rgba(10, 89, 97, 0.4) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 30%, rgba(186, 143, 90, 0.12) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-eyebrow {
    font-size: 13px;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #BA8F5A;
    margin-bottom: 24px;
    font-weight: 700;
    display: inline-block;
  }

  .hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(3rem, 6vw, 4rem);
    font-weight: 900;
    line-height: 1.05;
    margin-bottom: 32px;
    letter-spacing: -0.03em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    color: white !important;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgba(255,255,255,0.9);
    margin-bottom: 48px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
  }

  /* SEARCH BAR */
  .search-bar {
    position: relative;
    max-width: 500px;
    margin: 0 auto;
  }

  .search-bar svg {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-light);
    pointer-events: none;
  }

  .search-bar input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    color: white;
    font-family: var(--font-body);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .search-bar input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .search-bar input:focus {
    outline: none;
    border-color: var(--color-accent);
    background: rgba(255, 255, 255, 0.15);
  }

  /* SECTIONS */
  .section {
    padding: var(--section-spacing) var(--space-xl);
    position: relative;
  }

  .section-light {
    background: var(--bg-light);
  }

  .section-dark {
    background: var(--color-primary);
    color: white;
  }

  .section-dark::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(186, 143, 90, 0.06) 1px, transparent 1px);
    background-size: 20px 20px;
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }


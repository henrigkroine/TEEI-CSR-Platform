---
import Layout from '../layouts/Layout.astro';
import KPICard from '../components/KPICard';
import Chart from '../components/Chart';
import { detectLanguage, t } from '../lib/i18n';

const lang = detectLanguage(Astro.request);

// Mock VIS data - will be replaced with real API calls
const overallVis = 87.3;

const scoreDistributionData = {
  labels: ['0-20', '21-40', '41-60', '61-80', '81-100'],
  datasets: [
    {
      label: 'Number of Volunteers',
      data: [5, 15, 45, 180, 322],
      backgroundColor: 'rgba(59, 130, 246, 0.8)',
    },
  ],
};

const topVolunteers = [
  {
    id: 1,
    name: 'Sarah Johnson',
    score: 96.5,
    sessions: 45,
    hours: 135,
    rating: 4.9,
  },
  {
    id: 2,
    name: 'Michael Chen',
    score: 94.2,
    sessions: 42,
    hours: 126,
    rating: 4.8,
  },
  {
    id: 3,
    name: 'Emma Williams',
    score: 92.8,
    sessions: 38,
    hours: 114,
    rating: 4.9,
  },
  {
    id: 4,
    name: 'David Martinez',
    score: 91.5,
    sessions: 40,
    hours: 120,
    rating: 4.7,
  },
  {
    id: 5,
    name: 'Lisa Anderson',
    score: 90.3,
    sessions: 35,
    hours: 105,
    rating: 4.8,
  },
];
---

<Layout title={t(lang, 'vis.title')}>
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          {t(lang, 'vis.title')}
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          {t(lang, 'vis.engagementMetrics')}
        </p>
      </div>
      <button
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        View All Volunteers
      </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <KPICard
        client:load
        title={t(lang, 'vis.overallScore')}
        value={overallVis.toFixed(1)}
        subtitle="out of 100"
        trend={{ value: 3.2, direction: 'up' }}
      />
      <KPICard
        client:load
        title={t(lang, 'vis.timeContributed')}
        value="12,345"
        subtitle="total hours"
        trend={{ value: 8.5, direction: 'up' }}
      />
      <KPICard
        client:load
        title={t(lang, 'vis.sessionsLed')}
        value="4,567"
        subtitle="total sessions"
        trend={{ value: 12.3, direction: 'up' }}
      />
      <KPICard
        client:load
        title={t(lang, 'vis.participantRating')}
        value="4.7/5"
        subtitle="average rating"
        trend={{ value: 2.1, direction: 'up' }}
      />
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          {t(lang, 'vis.distribution')}
        </h2>
        <Chart client:load type="bar" data={scoreDistributionData} height={300} />
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          VIS Calculation Method
        </h2>
        <div class="space-y-4">
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                {t(lang, 'vis.timeContributed')}
              </span>
              <span class="text-sm font-semibold text-gray-900 dark:text-white">40%</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div class="bg-primary-600 h-2 rounded-full" style="width: 40%"></div>
            </div>
          </div>
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                {t(lang, 'vis.sessionsLed')}
              </span>
              <span class="text-sm font-semibold text-gray-900 dark:text-white">30%</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div class="bg-primary-600 h-2 rounded-full" style="width: 30%"></div>
            </div>
          </div>
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                {t(lang, 'vis.participantRating')}
              </span>
              <span class="text-sm font-semibold text-gray-900 dark:text-white">30%</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div class="bg-primary-600 h-2 rounded-full" style="width: 30%"></div>
            </div>
          </div>
          <div class="mt-4 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
            <p class="text-xs text-blue-800 dark:text-blue-200">
              The VIS score is calculated using a weighted formula that considers time contributed (40%),
              number of sessions led (30%), and participant satisfaction ratings (30%). Higher scores indicate
              greater volunteer impact and engagement.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
        {t(lang, 'vis.topVolunteers')}
      </h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Rank
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Volunteer
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                VIS Score
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Sessions
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Hours
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Rating
              </th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            {topVolunteers.map((volunteer, index) => (
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    {index === 0 && (
                      <svg class="w-5 h-5 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    )}
                    <span class="text-sm font-medium text-gray-900 dark:text-white">
                      #{index + 1}
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-primary-600 flex items-center justify-center text-white font-semibold">
                        {volunteer.name.split(' ').map(n => n[0]).join('')}
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        {volunteer.name}
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                    {volunteer.score}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  {volunteer.sessions}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  {volunteer.hours}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <span class="text-sm text-gray-900 dark:text-white">{volunteer.rating}</span>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</Layout>

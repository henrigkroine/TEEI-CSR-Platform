---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const { lang } = Astro.params;
const url = Astro.url;
const reason = url.searchParams.get('reason') || 'unknown';

// Map reasons to user-friendly messages
const messages: Record<string, { title: string; description: string }> = {
  invalid_company_id: {
    title: 'Company Not Found',
    description: 'The company ID you requested does not exist or is invalid.',
  },
  invalid_language: {
    title: 'Invalid Language',
    description: 'The language code in the URL is not supported.',
  },
  unknown: {
    title: 'Page Not Found',
    description: 'The page you are looking for does not exist.',
  },
};

const message = messages[reason] || messages.unknown;
---

<BaseLayout title="404 - Not Found" lang={lang || 'en'}>
  <div class="error-container">
    <div class="error-code">404</div>
    <h1 class="error-title">{message.title}</h1>
    <p class="error-description">{message.description}</p>

    <div class="error-details">
      <p><strong>Request Path:</strong> <code>{url.pathname}</code></p>
      {reason !== 'unknown' && (
        <p><strong>Reason:</strong> <code>{reason}</code></p>
      )}
    </div>

    <div class="error-actions">
      <a href="/" class="btn btn-primary">Go to Home</a>
      <a href="/login" class="btn btn-secondary">Sign In</a>
    </div>
  </div>
</BaseLayout>

<style>
  .error-container {
    max-width: 600px;
    margin: calc(var(--spacing-unit) * 8) auto;
    text-align: center;
    padding: calc(var(--spacing-unit) * 4);
  }

  .error-code {
    font-size: 6rem;
    font-weight: 700;
    color: var(--color-text-secondary);
    line-height: 1;
    margin-bottom: calc(var(--spacing-unit) * 2);
  }

  .error-title {
    font-size: 2rem;
    margin-bottom: calc(var(--spacing-unit) * 2);
    color: var(--color-text);
  }

  .error-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--spacing-unit) * 4);
    line-height: 1.6;
  }

  .error-details {
    background-color: var(--color-bg-secondary);
    padding: calc(var(--spacing-unit) * 3);
    border-radius: var(--border-radius);
    margin-bottom: calc(var(--spacing-unit) * 4);
    text-align: left;
  }

  .error-details p {
    margin-bottom: calc(var(--spacing-unit) * 1);
    font-size: 0.9375rem;
  }

  .error-details p:last-child {
    margin-bottom: 0;
  }

  .error-details code {
    background-color: var(--color-bg);
    padding: calc(var(--spacing-unit) * 0.5) calc(var(--spacing-unit) * 1);
    border-radius: calc(var(--border-radius) / 2);
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
  }

  .error-actions {
    display: flex;
    gap: calc(var(--spacing-unit) * 2);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: calc(var(--spacing-unit) * 1.5) calc(var(--spacing-unit) * 3);
    border: none;
    border-radius: var(--border-radius);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
    min-width: 140px;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--color-primary-dark);
  }

  .btn-secondary {
    background-color: var(--color-bg-secondary);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    background-color: var(--color-border);
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 4rem;
    }

    .error-title {
      font-size: 1.5rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }
  }
</style>

---
/**
 * Impact-In Delivery Status Dashboard
 *
 * Displays delivery history, SLA metrics, and manual replay controls for Impact-In exports.
 *
 * Features:
 * - Last 30 deliveries timeline with status indicators
 * - Success/failure status per platform (Benevity, Goodera, Workday)
 * - Retry count and final outcome visualization
 * - Payload preview (sanitized, no PII)
 * - Manual replay button (admin only)
 * - Weekly SLA dashboard widget (current week success rate)
 *
 * Reference: MULTI_AGENT_PLAN.md ¬ß Worker 4/Phase F/Delivery Status UI
 */

import BaseLayout from '../../../../layouts/BaseLayout.astro';
import { hasPermission } from '../../../../types/roles';
import DeliveryTimeline from '../../../../components/impact-in/DeliveryTimeline';
import SLADashboard from '../../../../components/impact-in/SLADashboard';
import DeliveryFilters from '../../../../components/impact-in/DeliveryFilters';

// Extract route parameters
const { lang, companyId } = Astro.params;
const user = Astro.locals.user;
const tenantContext = Astro.locals.tenantContext;

// Middleware handles auth/tenant validation, but double-check
if (!user || !tenantContext) {
  return Astro.redirect('/login');
}

// Verify user has admin console access
if (!hasPermission(user.role, 'ADMIN_CONSOLE')) {
  return Astro.redirect(`/${lang}/cockpit/401?reason=insufficient_permissions`);
}

const canReplayDeliveries = hasPermission(user.role, 'MANAGE_INTEGRATIONS');

// Fetch initial data server-side
const apiBaseUrl = import.meta.env.PUBLIC_API_BASE_URL || 'http://localhost:3000';

// Fetch SLA status
let slaStatus = null;
try {
  const slaResponse = await fetch(`${apiBaseUrl}/v1/impact-in/sla-status?companyId=${companyId}`);
  if (slaResponse.ok) {
    slaStatus = await slaResponse.json();
  }
} catch (error) {
  console.error('Failed to fetch SLA status:', error);
}

// Fetch recent deliveries
let deliveries = [];
try {
  const deliveriesResponse = await fetch(
    `${apiBaseUrl}/v1/impact-in/deliveries?companyId=${companyId}&limit=30`
  );
  if (deliveriesResponse.ok) {
    const data = await deliveriesResponse.json();
    deliveries = data.data || [];
  }
} catch (error) {
  console.error('Failed to fetch deliveries:', error);
}
---

<BaseLayout title="Impact-In Deliveries - TEEI Corporate Cockpit" lang={lang}>
  <div class="deliveries-header">
    <div>
      <h1>Impact-In Deliveries</h1>
      <p class="breadcrumb">
        <a href={`/${lang}/cockpit/${companyId}`}>Dashboard</a>
        <span class="separator">‚Ä∫</span>
        <a href={`/${lang}/cockpit/${companyId}/admin`}>Admin</a>
        <span class="separator">‚Ä∫</span>
        <span>Deliveries</span>
      </p>
    </div>
    <div class="role-indicator">
      <span class="role-badge">{user.role}</span>
    </div>
  </div>

  <!-- SLA Dashboard Widget -->
  <section class="sla-section">
    <h2>
      <span class="icon">üìä</span>
      Current Week SLA Status
    </h2>
    <p class="section-description">
      Service Level Agreement compliance metrics for the current week (Monday-Sunday).
    </p>
    <SLADashboard
      companyId={companyId}
      initialData={slaStatus}
      client:load
    />
  </section>

  <!-- Delivery Filters -->
  <section class="filters-section">
    <h2>
      <span class="icon">üîç</span>
      Filter Deliveries
    </h2>
    <DeliveryFilters client:load />
  </section>

  <!-- Delivery Timeline -->
  <section class="timeline-section">
    <div class="timeline-header">
      <h2>
        <span class="icon">üìÖ</span>
        Recent Deliveries (Last 30)
      </h2>
      {canReplayDeliveries && (
        <div class="bulk-actions">
          <button class="bulk-replay-btn" data-action="replay-failed">
            <span class="icon">üîÑ</span>
            Retry All Failed
          </button>
        </div>
      )}
    </div>
    <p class="section-description">
      Timeline of recent Impact-In deliveries to external platforms. Click a delivery for details.
    </p>
    <DeliveryTimeline
      companyId={companyId}
      initialDeliveries={deliveries}
      canReplay={canReplayDeliveries}
      client:load
    />
  </section>

  <!-- Help Section -->
  <section class="help-section">
    <h3>About Impact-In Deliveries</h3>
    <div class="help-grid">
      <div class="help-card">
        <h4>üéØ What are deliveries?</h4>
        <p>
          Automated exports of your company's impact metrics to third-party platforms
          (Benevity, Goodera, Workday) based on configured schedules.
        </p>
      </div>
      <div class="help-card">
        <h4>üìà SLA Targets</h4>
        <ul>
          <li><strong>Success Rate:</strong> ‚â• 98%</li>
          <li><strong>Delivery Latency:</strong> ‚â§ 5 minutes</li>
          <li><strong>Retry Success:</strong> ‚â• 90% after 3 attempts</li>
        </ul>
      </div>
      <div class="help-card">
        <h4>üîÑ Retry Logic</h4>
        <p>
          Failed deliveries are automatically retried up to 3 times with exponential backoff
          (5 min, 10 min, 20 min). Payload hashing ensures no duplicate deliveries.
        </p>
      </div>
      <div class="help-card">
        <h4>üõ†Ô∏è Manual Replay</h4>
        <p>
          Admins can manually retry failed deliveries. Click the replay icon on any failed
          delivery to retry. Bulk retry is available for multiple failures.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .deliveries-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: calc(var(--spacing-unit) * 4);
    flex-wrap: wrap;
    gap: calc(var(--spacing-unit) * 2);
    padding-bottom: calc(var(--spacing-unit) * 3);
    border-bottom: 2px solid var(--color-border);
  }

  h1 {
    font-size: 2rem;
    margin-bottom: calc(var(--spacing-unit) * 1);
    color: var(--color-text);
  }


# JWT Secret (should match api-gateway)
JWT_SECRET=teei-csr-platform-secret-key-change-in-production

# Analytics Service URL
ANALYTICS_SERVICE_URL=http://localhost:3023

# Campaigns Service URL (SWARM 6)
CAMPAIGNS_SERVICE_URL=http://localhost:3027

# API Gateway URL
API_GATEWAY_URL=http://localhost:3017

# Identity Service URL (Worker-1 platform identity/SSO service)
IDENTITY_SERVICE_URL=http://localhost:3017/v1/identity
PUBLIC_IDENTITY_SERVICE_URL=http://localhost:3017/v1/identity

# Feature Flags
# Set to 'true' to use real Identity API instead of mock data
USE_REAL_IDENTITY_API=false
PUBLIC_USE_REAL_IDENTITY_API=false

# Gen-AI Reporting Configuration
# Set to 'true' to use production reporting API, 'false' for development mock data
PUBLIC_USE_REAL_API=false

# Enable debug logging for reporting API client
PUBLIC_REPORTING_DEBUG=false

# Monthly AI budget in USD (for cost tracking and warnings)
PUBLIC_MONTHLY_AI_BUDGET=100

# Budget warning threshold (0-1, show warnings at this percentage)
PUBLIC_BUDGET_WARNING_THRESHOLD=0.8

{
  "dashboard": {
    "title": "Carbon Emissions (COâ‚‚e) Tracking",
    "tags": ["carbon", "sustainability", "co2e", "esg"],
    "timezone": "utc",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1h",
    "time": {
      "from": "now-90d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total COâ‚‚e Emissions - Last 30 Days",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT sum(co2e_kg) FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 30 DAY",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "kg",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            },
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Emissions by Region",
        "type": "piechart",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT region, sum(co2e_kg) as emissions FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 30 DAY GROUP BY region",
            "format": "table"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 3,
        "title": "Carbon Intensity by Region",
        "type": "bargauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT region, avg(carbon_intensity) * 1000 as intensity_g FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 7 DAY GROUP BY region",
            "format": "table"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "g/kWh",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 350, "color": "yellow"},
                {"value": 450, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Reduction Potential",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "datasource": "-- Dashboard --",
            "rawSql": "SELECT 35.0"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "unit": "percent",
          "text": {
            "titleSize": 12,
            "valueSize": 48
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 20, "color": "yellow"},
                {"value": 30, "color": "green"}
              ]
            }
          }
        },
        "description": "Estimated COâ‚‚e reduction potential from recommended actions"
      },
      {
        "id": 5,
        "title": "Daily COâ‚‚e Emissions Trend",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT date as time, region, sum(co2e_kg) as emissions FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 90 DAY GROUP BY date, region ORDER BY date",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kg",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 15,
              "stacking": {"mode": "normal"}
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Energy Consumption (kWh)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT date as time, region, sum(kwh_consumed) as kwh FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 90 DAY GROUP BY date, region ORDER BY date",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kwatth",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Emissions by Service Type",
        "type": "table",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT service, region, sum(kwh_consumed) as total_kwh, sum(co2e_kg) as total_co2e, avg(carbon_intensity) * 1000 as avg_intensity FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 30 DAY GROUP BY service, region ORDER BY total_co2e DESC",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "total_kwh"},
              "properties": [{"id": "unit", "value": "kwatth"}]
            },
            {
              "matcher": {"id": "byName", "options": "total_co2e"},
              "properties": [{"id": "unit", "value": "kg"}]
            },
            {
              "matcher": {"id": "byName", "options": "avg_intensity"},
              "properties": [{"id": "unit", "value": "g/kWh"}]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Reduction Opportunities",
        "type": "table",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "datasource": "ClickHouse",
            "rawSql": "SELECT reduction_opportunity as action, count(*) as occurrences, sum(co2e_kg) as total_emissions FROM teei_analytics.carbon_emissions WHERE date >= today() - INTERVAL 30 DAY GROUP BY reduction_opportunity ORDER BY total_emissions DESC",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "total_emissions"},
              "properties": [
                {"id": "unit", "value": "kg"},
                {
                  "id": "custom.cellOptions",
                  "value": {"type": "color-background"}
                }
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "Carbon Reduction Playbook",
        "type": "text",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 6},
        "options": {
          "mode": "markdown",

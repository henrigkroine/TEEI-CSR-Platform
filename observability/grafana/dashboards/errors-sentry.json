{
  "dashboard": {
    "title": "TEEI Platform - Errors (Sentry)",
    "tags": ["teei", "sentry", "errors", "observability"],
    "timezone": "utc",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Error Count by Service",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "sum(rate(sentry_events_total{type=\"error\"}[5m])) by (service)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "format": "short"
          }
        ],
        "thresholds": [
          {
            "value": 1,
            "colorMode": "warning"
          },
          {
            "value": 10,
            "colorMode": "critical"
          }
        ]
      },
      {
        "id": 2,
        "title": "Unique Issues (Last Hour)",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "count(count_over_time(sentry_events_total{type=\"error\"}[1h])) by (issue_id)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Users Affected",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "count(count_over_time(sentry_events_total{type=\"error\"}[1h])) by (user_id)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 200
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Top Error Types",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "topk(10, sum(increase(sentry_events_total{type=\"error\"}[1h])) by (error_type))",
            "legendFormat": "{{ error_type }}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 5,
        "title": "Errors by Environment",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "sum(increase(sentry_events_total{type=\"error\"}[1h])) by (environment)",
            "legendFormat": "{{ environment }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Rate Heatmap",
        "type": "heatmap",
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "sum(rate(sentry_events_total{type=\"error\"}[1m])) by (service)",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "cellGap": 2,
          "color": {
            "mode": "scheme",
            "scheme": "Spectral"
          },
          "yAxis": {
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "Recent Critical Errors",
        "type": "table",
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 26
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "sentry_events_total{type=\"error\", level=\"fatal\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "service": "Service",
                "error_type": "Error Type",
                "message": "Message",
                "timestamp": "Time",
                "issue_id": "Issue ID"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Issue ID"
              },
              "properties": [
                {
                  "id": "links",
                  "value": [
                    {
                      "title": "View in Sentry",
                      "url": "https://sentry.io/organizations/teei/issues/${__value.text}"
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Error Trends (7 days)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 36
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "sum(increase(sentry_events_total{type=\"error\"}[1d])) by (service)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "timeFrom": "7d",
        "yAxes": [
          {
            "label": "Daily Errors",
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "title": "Sentry Performance Issues",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 44
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "topk(20, sentry_transaction_duration_p95{service=~\"$service\"} > 1000)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "service": "Service",
                "transaction": "Transaction",
                "Value": "P95 Duration (ms)"
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(sentry_events_total, service)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        },
        {
          "name": "environment",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(sentry_events_total, environment)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"Sentry.*\"}",
          "name": "Sentry Alerts",
          "titleFormat": "{{ alertname }}"
        }
      ]
    }
  }
}

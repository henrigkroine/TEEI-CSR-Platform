{
  "dashboard": {
    "title": "FinOps - Cost Tracking & Allocation",
    "tags": ["finops", "costs", "billing"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5m",
    "panels": [
      {
        "id": 1,
        "title": "Total Monthly Cost",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(teei_tenant_total_cost_usd)",
            "legendFormat": "Total Cost (USD)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50000 },
                { "color": "red", "value": 100000 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Cost vs Forecast",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(sum(teei_tenant_total_cost_usd) - sum(teei_tenant_forecast_cost_usd)) / sum(teei_tenant_forecast_cost_usd) * 100",
            "legendFormat": "Variance (%)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 20 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Anomaly Count",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "count(abs((teei_tenant_total_cost_usd - teei_tenant_forecast_cost_usd) / teei_tenant_forecast_cost_usd) > 0.2)",
            "legendFormat": "Anomalies Detected",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 3 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cost Per Tenant (Top 10)",
        "type": "bargauge",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, teei_tenant_total_cost_usd)",
            "legendFormat": "{{tenant}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "displayMode": "gradient",
            "orientation": "horizontal"
          }
        },
        "options": {
          "showUnfilled": true
        }
      },
      {
        "id": 5,
        "title": "Cost by Service",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 4, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "sum(teei_cost_usd) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 6,
        "title": "Cost by Resource Type",
        "type": "piechart",
        "gridPos": { "x": 18, "y": 4, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "sum(teei_cost_usd) by (resource_type)",
            "legendFormat": "{{resource_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 7,
        "title": "Cost Trend (30 days)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(teei_cost_usd[1d])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "stacking": {
                "mode": "normal"
              }
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "mean"]
          }
        }
      },
      {
        "id": 8,
        "title": "Cost by Region",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "sum(teei_cost_usd) by (region)",
            "legendFormat": "{{region}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Anomaly Detection",
        "type": "table",
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "abs((teei_tenant_total_cost_usd - teei_tenant_forecast_cost_usd) / teei_tenant_forecast_cost_usd * 100) > 20",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "tenant": "Tenant",
                "Value": "Deviation %"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Deviation %" },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "green", "value": null },
                      { "color": "yellow", "value": 20 },
                      { "color": "red", "value": 50 }
                    ]
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}

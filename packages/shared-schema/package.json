{
  "name": "@teei/shared-schema",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:migrate": "tsx src/migrate.ts",
    "db:seed": "tsx src/seed/index.ts",
    "db:reset": "tsx src/reset.ts",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate:pg",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
